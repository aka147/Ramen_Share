
<section class="section">
  <div class="container">
    <div class="columns is-multiline margin-bottom-5">
      <% @users.each do |user| %>
        <div class="column is-6-mobile is-6-tablet is-3-desktop">
          <div class="card">
            <div class="card-content">
              <div class="card-image">
                <figure class="image ">
                 <!--画像をリンクにしたい場合はdoを使ってdoとendで挟む-->
                  <%= link_to user_path(user) do %>
                    <%= attachment_image_tag user, :profile_image, fallback: "no-image.png" %>
                  <% end %>
                </figure>
              </div>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-content">
                  <div class="title"><%= link_to user.username, user_path(user) %></div>
                </div>
              </div>
              <div class="content">
                投稿数：<%= user.noodles.count %>
              </div>
            </div>
          </div>
        </div>

      <% end %>
      <%= paginate @users %>
    </div>
  </div>
</section>