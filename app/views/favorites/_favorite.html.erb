                    <% unless current_user.nil? %>
                    <% if current_user.already_favorited?(noodle) %>
                    <!--ajax処理をするためにremote trueを記述-->
                    <!--link_to noodle_favorites_path(noodle), method: :delete remote: true-->
                    <%= link_to noodle_favorites_path(noodle), method: :delete, remote: true do %>
                      <i class="fas fa-heart"></i>
                    <% end %>
                    <%= noodle.favorites.count %>
                    <% else %>
                    <!--link_to noodle_favorites_path(noodle), method: :post remote: true-->
                    <%= link_to noodle_favorites_path(noodle), method: :post, remote: true do %>
                      <i class="far fa-heart"></i>
                    <% end %>
                    <%= noodle.favorites.count %>
                    <% end %>
                    <% else %>
                    <i class="far fa-heart"></i>
                    <%= noodle.favorites.count %>
                    <% end %>