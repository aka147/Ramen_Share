<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        ラーメン投稿
      </h1>
    </div>
  </div>
</section>

<% if @noodle.errors.any? %>
<div class="notification is-danger">
  <!--pluralizeは英語の単数形や複数形を判定してくれるもの-->
  <h2><%= pluralize(@noodle.errors.count, "error") %>prohibited this object from being saved: not successfully</h2>
  <ul>
    <% @noodle.errors.full_messages.each do |message|%>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @noodle do |f| %>
          <div class="field">
            <%= f.label :title, "ラーメン屋", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :body, "紹介文", class: "label" %>
            <%= f.text_area :body, class: "textarea" %>
          </div>

          <div class="field">
            <%= f.label :image, "写真", class: "label" %>
            <%= f.attachment_field :image, class: "input" %>
          </div>

          <%= f.submit '投稿', class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
