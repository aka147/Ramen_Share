<!DOCTYPE html>
<html>
  <head>
    <title>RamenShare</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.min.css" integrity="sha256-UzFD2WYH2U1dQpKDjjZK72VtPeWP50NoJjd26rnAdUI=" crossorigin="anonymous" />
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <script src="https://kit.fontawesome.com/46c649dabe.js" crossorigin="anonymous"></script>
  <body>
    <% if flash[:notice] %>
      <div class="notification is-warning">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="notification is-danger">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>




    <nav class="navbar ">
      <!--<div class="navbar-brand">-->
      <div class="hero-body">
        <%= link_to root_path, class: "navbar-item" do %>
          <h1 class="title is-3" style="font-family: cursive;">ラーメンShare</h1>
        <% end %>
      </div>

    <% if user_signed_in? %>
      <div id="navbarExampleTransparentExample" class="navbar-menu">
        <div class="navbar-item">
          <%= link_to "ラーメン一覧", noodles_path, class: "navbar-item button is-danger is-light is-large" %>
        </div>
        <div class="navbar-item">
          <%= link_to "ラーメン投稿", new_noodle_path, class: "navbar-item button is-danger is-light is-large" %>
        </div>
        <div class="navbar-item">
          <%= link_to "投稿者一覧", users_path, class: "button is-danger is-light is-large" %>
        </div>
        <div class="navbar-item">
          <%= link_to "マイページ", user_path(current_user), class: "button is-danger is-light is-large" %>
        </div>
        <div class="navbar-item">
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "button is-danger is-light is-large",  data: { confirm: "本当にログアウトしますか?"}%>
        </div>
      </div>
      <% else %>
        <div id="navbarExampleTransparentExample" class="navbar-menu">
          <div class="navbar-item">
            <%= link_to "ラーメン一覧", noodles_path, class: "navbar-item button is-danger is-light is-large" %>
          </div>
          <div class="navbar-item">
            <%= link_to "投稿者一覧", users_path, class: "navbar-item button is-danger is-light is-large" %>
          </div>
          <div class="navbar-item">
            <%= link_to "ログイン", new_user_session_path, class: "button is-danger is-light is-large" %>
          </div>
          <div class="navbar-item">
            <%= link_to "新規登録", new_user_registration_path, class: "button is-danger is-light is-large"%>
          </div>
        </div>
      <% end %>

    <div id="sp-menu">
      <div class="navbar-brand">
      </div>
      <ul>
        <% if user_signed_in? %>
        <li><%= link_to "ラーメン一覧", noodles_path, class: "navbar-item button is-danger " %></li>
        <li><%= link_to "ラーメン投稿", new_noodle_path, class: "navbar-item button is-danger " %></li>
        <li><%= link_to "投稿者一覧", users_path, class: "navbar-item button is-danger " %></li>
        <li><%= link_to "マイページ", user_path(current_user), class: "navbar-item button is-danger " %></li>
        <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "navbar-item button is-danger ",  data: { confirm: "本当にログアウトしますか?"}%></li>
      <% else %>
        <li><%= link_to "ラーメン一覧", noodles_path, class: "navbar-item button is-danger " %></li>
        <li><%= link_to "投稿者一覧", users_path, class: "navbar-item button is-danger " %></li>
        <li><%= link_to "ログイン", new_user_session_path, class: "navbar-item button is-danger " %></li>
        <li><%= link_to "新規登録", new_user_registration_path, class: "navbar-item button is-danger "%></li>
      </ul>
      <% end %>
    </div>
    <div id="hm-icon">
      <a class="menu-trigger" href="#">
        <span></span>
        <span></span>
        <span></span>
      </a>
    </div>

      <!--<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>-->

      <script>
        $(function() {
          $('.menu-trigger').on('click', function(event) {
            $(this).toggleClass('active');
            $('#sp-menu').fadeToggle();
            event.preventDefault();
          });
        });
      </script>

    </nav>
    <%= yield %>
  </body>
</html>
